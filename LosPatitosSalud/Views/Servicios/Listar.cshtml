@model List<LosPatitosSalud.Models.Servicio>
@{
    ViewData["Title"] = "Servicios";
}

<h2>Lista de Servicios</h2>

@if (TempData["Exito"] != null)
{
    <div class="alert alert-success">@TempData["Exito"]</div>
}

<a asp-action="Registrar" class="btn btn-primary mb-3">+ Nuevo Servicio</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Monto</th>
            <th>IVA (%)</th>
            <th>Especialidad</th>
            <th>Especialista</th>
            <th>Clínica</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var servicio in Model)
        {
            <tr>
                <td>@servicio.Nombre</td>
                <td>@servicio.Descripcion</td>
                <td>@servicio.Monto.ToString("C")</td>
                <td>@servicio.IVA</td>
                <td>@servicio.NombreEspecialidad</td>
                <td>@servicio.Especialista</td>
                <td>@servicio.Clinica</td>
                <td>@(servicio.Estado ? "Activo" : "Inactivo")</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@servicio.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="VerCitas" asp-route-id="@servicio.Id" class="btn btn-info btn-sm">Ver Citas</a>
                </td>
            </tr>
        }
    </tbody>
</table>
