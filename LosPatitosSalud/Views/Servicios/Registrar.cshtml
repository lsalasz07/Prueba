@model LosPatitosSalud.Models.Servicio
@{
    ViewData["Title"] = "Registrar Servicio";
}

<h2>Registrar Nuevo Servicio</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Registrar" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Monto" class="form-label"></label>
                <input asp-for="Monto" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="IVA" class="form-label"></label>
                <input asp-for="IVA" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="IVA" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Especialidad" class="form-label"></label>
                <select asp-for="Especialidad" class="form-select">
                    <option value="">-- Seleccione --</option>
                    <option value="1">Medicina General</option>
                    <option value="2">Imagenología</option>
                    <option value="3">Microbiología</option>
                </select>
                <span asp-validation-for="Especialidad" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Especialista" class="form-label"></label>
                <input asp-for="Especialista" class="form-control" />
                <span asp-validation-for="Especialista" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Clinica" class="form-label"></label>
                <input asp-for="Clinica" class="form-control" />
                <span asp-validation-for="Clinica" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Estado" class="form-label"></label>
                <select asp-for="Estado" class="form-select">
                    <option value="true">Activo</option>
                    <option value="false">Inactivo</option>
                </select>
            </div>
            <button type="submit" class="btn btn-success">Guardar</button>
            <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
